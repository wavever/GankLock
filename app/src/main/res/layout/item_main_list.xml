<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_gank_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_gank_item"
    android:paddingRight="@dimen/padding_gank_item"
    android:paddingTop="@dimen/padding_vertical_gank_item"
    android:paddingBottom="@dimen/padding_vertical_gank_item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="•"/>

    <android.support.v4.widget.Space
        android:layout_width="6dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_gank_title"
        android:textColor="#000"
        tools:text="这是一首简单的小情歌，唱着我们心中的曲折"/>
</LinearLayout>

